extends layout
block page
  - var menu='register'
block content
  .col-md-4.col-md-offset-4
    h2 Nýskráning
    div.error= error
    div
      form(action='/users/register', method='POST')
        p
          input.form-control(name='name', value=name != null ? '#{name}' : '' type='text', placeholder='Nafn')
        p
          input.form-control(name='email', required value= email != null ? '#{email}' : '' type='text', placeholder='Netfang')
        p
          input.form-control(name='password', type='password', placeholder='Lykilorð')
        p
          input.form-control(name='password_confirm', type='password', placeholder='Staðfestu lykilorð')
        p
          button.btn.btn-lg.btn-primary.btn-block(type='submit') Skrá
          a(href='/') Hætta við
